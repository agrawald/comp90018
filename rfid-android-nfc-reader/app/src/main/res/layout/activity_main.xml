<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/LinearLayout1"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" tools:context="com.mayi.rfid.nfcrfidreader.AutoTagActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="#71BCFA" android:padding="6dip">

        <TextView android:id="@+id/textViewTitle" android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_marginLeft="2dp"
            android:layout_weight="0.12" android:text="@string/service_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="#71BCFA" android:padding="6dip">

        <TextView android:id="@+id/tvAutoTagId" android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="1" android:ems="10" />
        <TextView android:id="@+id/tvAutoTagAuthorized" android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="1" android:ems="10" />
        <Button android:id="@+id/buttonAddAutoTag" android:layout_width="64dip"
            android:layout_height="wrap_content" android:onClick="addItem"
            android:text="@string/add_button_text" />
    </LinearLayout>
</LinearLayout>
